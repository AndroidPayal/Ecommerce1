<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="payal.cluebix.www.ecommerce.SearchAct">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="3dp"
    android:orientation="horizontal">
    <EditText
        android:id="@+id/main_activity_search"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_search_black_24dp"
        android:queryHint="Search Text"
        android:background="@drawable/input_search_background"
        android:textColorHint="#b3abab"
        android:hint="Search Here"

        />
    <Button
        android:id="@+id/main_act_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:elevation="2dp"
        android:textColor="#fff"
        android:textAllCaps="true"
        android:background="@drawable/button"
        android:gravity="center"/>
</LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/text_No_Data_matched"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Match Found !"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#8b8989"
        android:layout_margin="20dp"
        android:visibility="gone"
        />
</LinearLayout>
