<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="180dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:cardElevation="3dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:focusableInTouchMode="true"
                android:padding="3dp"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    >

                    <ImageView
                        android:id="@+id/t_cart_remove"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/cancel"
                        android:layout_marginTop="2dp"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="8dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        >
                        <ImageView
                            android:id="@+id/image_cart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_launcher_round"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.75"
                        android:weightSum="4"
                        android:layout_marginHorizontal="5dp"
                        android:orientation="vertical"

                        >

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.72"
                            android:paddingVertical="1dp"
                            android:text="Product name"
                            android:textColor="#000"
                            android:paddingLeft="5dp"
                            android:layout_marginBottom="3dp"
                            />

                        <TextView
                            android:id="@+id/description_cart"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.1"
                            android:paddingVertical="2dp"
                            android:textSize="12sp"
                            android:text="Product Code : 123456"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:paddingLeft="5dp"
                            android:maxLines="2"
                            />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.8"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            >
                        <TextView
                            android:id="@+id/sample_cart"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3"
                            android:textSize="14sp"
                            android:gravity="center_vertical"
                            android:paddingVertical="1dp"
                            android:text="Sample:0.00"
                            android:textColor="#000"
                            android:paddingLeft="5dp"
                            />

                            <TextView
                                android:id="@+id/available_cart"
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:layout_marginRight="1.5dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:textSize="14sp"
                                android:paddingVertical="1dp"
                                android:text="Avl : 0000"
                                android:textColor="#e60b0b"
                                android:paddingLeft="5dp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.2"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:id="@+id/price_cart"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginVertical="2dp"
                                android:layout_weight="1.4"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:text="Prcie : 12000"
                                android:textColor="#355C7D"
                                android:textSize="16sp" />


                            <TextView
                                android:id="@+id/quant"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.6"
                                android:layout_marginVertical="2dp"
                                android:text="Qty : 51"
                                android:gravity="center_vertical"
                                android:textColor="#1fb708"
                                android:paddingLeft="5dp"
                                />

                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_marginTop="4dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:weightSum="3"
                        android:orientation="vertical"


                        >

                        <ImageButton
                            android:id="@+id/plus"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/up"

                            />
                        <EditText
                            android:id="@+id/quantity"
                            android:gravity="center_horizontal"
                            android:phoneNumber="true"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:backgroundTint="@android:color/transparent"
                            />
                        <ImageButton
                            android:id="@+id/minus"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/down"
                            />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>











